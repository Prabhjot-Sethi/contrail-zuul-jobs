contrail_configuration:
{%- if ansible_distribution == 'RedHat' %}
  LINUX_DISTR: rhel
{%- endif %}
  CONTRAIL_VERSION: "{{ contrail_version }}"
  CLOUD_ORCHESTRATOR: "{{ cloud_orchestrator }}"
  CONTROLLER_NODES: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.control_plane_interface].ipv4.address }}"
  CONTROL_NODES: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.data_plane_interface].ipv4.address }}"
  LOG_LEVEL: SYS_DEBUG
  PHYSICAL_INTERFACE: "{{ sanity.data_plane_interface }}"
  AUTH_MODE: keystone
  AAA_MODE: rbac
  KEYSTONE_AUTH_ADMIN_PASSWORD: c0ntrail123
  KEYSTONE_AUTH_HOST: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.control_plane_interface].ipv4.address }}"
  KEYSTONE_AUTH_URL_VERSION: "/v3"
  RABBITMQ_NODE_PORT: 5673
  OPENSTACK_VERSION: "{{ openstack_version }}"
  CONFIG_NODEMGR__DEFAULTS__minimum_diskGB: 30
  DATABASE_NODEMGR__DEFAULTS__minimum_diskGB: 30

kolla_config:
  kolla_globals:
    network_interface: "{{ sanity.control_plane_interface }}"
    api_interface: "{{ sanity.control_plane_interface }}"
    storage_interface: "{{ sanity.control_plane_interface }}"
    neutron_external_interface: "{{ sanity.control_plane_interface }}"
    kolla_external_vip_interface: "{{ sanity.control_plane_interface }}"
    kolla_internal_vip_address: "{{ hostvars[groups['control-plane'][0]].['ansible_' + sanity.control_plane_interface].ipv4.address }}"
    contrail_api_interface_address: "{{ hostvars[groups['control-plane'][0]].['ansible_' + sanity.control_plane_interface].ipv4.address }}"
    enable_haproxy: no
    enable_ironic: 'no'
    enable_ironic_notifications: 'no'
    openstack_service_workers: 1
    openstack_release: "{{ kolla_version }}"
    kolla_base_distro: "{{ kolla_docker_distro }}"
    docker_registry: "{{ nexus.fqdn }}:{{ nexus.registry.access }}"
  kolla_passwords:
    keystone_admin_password: c0ntrail123
  customize:
    nova.conf: |
      [libvirt]
      virt_type=qemu
      cpu_mode=none

orchestrator_configuration:
  internal_vip: "{{ hostvars[groups['control-plane'][0]].['ansible_' + sanity.control_plane_interface].ipv4.address }}"
  keystone:
    version: v3
    password: c0ntrail123
