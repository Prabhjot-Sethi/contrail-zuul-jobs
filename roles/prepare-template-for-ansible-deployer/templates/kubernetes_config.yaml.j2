contrail_configuration:
  CONTRAIL_VERSION: "{{ contrail_version }}"
  OPENSTACK_VERSION: "{{ openstack_version }}"
  CLOUD_ORCHESTRATOR: "{{ cloud_orchestrator }}"

  # TODO: use one interface becuase kubelet needs to be on vhost0 interface
  #
  CONTROLLER_NODES: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.data_plane_interface].ipv4.address }}"
  CONTROL_NODES: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.data_plane_interface].ipv4.address }}"
  #
  KUBERNETES_API_NODES: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.data_plane_interface].ipv4.address }}"
  KUBEMANAGER_NODES: "{{ hostvars[groups['control-plane'][0]]['ansible_' + sanity.data_plane_interface].ipv4.address }}"
  #
  LOG_LEVEL: SYS_DEBUG
  PHYSICAL_INTERFACE: "{{ sanity.data_plane_interface }}"
  JVM_EXTRA_OPTS: -Xms1g -Xmx2g
  CONFIG_DATABASE_NODEMGR__DEFAULTS__minimum_diskGB: 10
  DATABASE_NODEMGR__DEFAULTS__minimum_diskGB: 10
  KUBERNETES_PUBLIC_FIP_POOL:
     domain: default-domain
     name: __fip_pool_public__
     network: __public__
     project: k8s-default
  RABBITMQ_NODE_PORT: 5673
